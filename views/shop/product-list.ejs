<%- include('../includes/head.ejs') %>

  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <% if (prods.length > 0) { %>
      <div class="grid">
        <% for(let product of prods) { %>
        <div class="article product-item">
          <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="https://cdn.pixabay.com/photo/2015/11/19/21/14/glasses-1052023_1280.jpg"
              alt="Great Book"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">Price: $19.9</h2>
            <p class="product__description">
              This is a great book that you will love to read. It has many
              interesting topics and is very well written.
            </p>
            <div class="card__actions">
              <button class="btn">Add to Cart</button>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <% } else { %>
      <h1>No products found!</h1>
      <% } %>
    </main>
  </body>
</html>
